<%- include('layouts/header')%>
<br>
<h1 class="page-header"><%= title %></h1>
<div class="row">
    <div class="col-xs-12 col-md-6">
        <img src="/products images/<%= product._id %>/<%= product.image %>" class="spi">
        <br><br>
    </div>
    <div class="col-xs-12 col-md-6">
        <p><%- product.description %></p>
        <p><%- parseFloat(product.price).toFixed(2) %> EGP</p>
        <a href="/cart/add/<%= product.slug %>">Add to cart</a>
    </div>
    <div class="col-xs-12">
        <ul class="gallery">
            <% galleryImages.forEach(image => { %>
            <% if (image != "thumbs") { %>
            <li>
                <a data-fancybox="galley" href="/products images/<%= product._id %>/gallery/<%= image %>">
                    <img src="/products images/<%= product._id %>/gallery/thumbs/<%= image %>" alt="">
                </a>
            </li>
            <% } %>
            <% }); %>
        </ul>
    </div>
</div>

<%- include('layouts/footer')%>